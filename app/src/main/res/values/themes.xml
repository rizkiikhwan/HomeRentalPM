<resources xmlns:tools = "http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name = "Base.Theme.HomeRentalPM"
           parent = "Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name = "colorPrimary">@color/purple_500</item>
        <item name = "colorPrimaryVariant">@color/lavender</item>
        <item name = "colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name = "colorSecondary">@color/teal_200</item>
        <item name = "colorSecondaryVariant">@color/teal_700</item>
        <item name = "colorOnSecondary">@color/black</item>

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Dark Mode -->
    <style name = "nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name = "colorControlActivated">@color/night_mode</item>
        <item name = "colorSwitchThumbNormal">#FFFFFF</item>
        <item name = "android:colorForeground">#99000000</item>
    </style>

    <!-- Notification -->
    <style name = "notificationSwitch" parent="Theme.AppCompat.Light">
        <item name = "colorControlActivated">@color/night_mode</item>
        <item name = "colorSwitchThumbNormal">#FFFFFF</item>
        <item name = "android:colorForeground">#99000000</item>
    </style>

    <!-- Private Account -->
    <style name = "privateAccountSwitch" parent="Theme.AppCompat.Light">
        <item name = "colorControlActivated">@color/night_mode</item>
        <item name = "colorSwitchThumbNormal">#FFFFFF</item>
        <item name = "android:colorForeground">#99000000</item>
    </style>

    <style name = "Theme.HomeRentalPM"
           parent = "Base.Theme.HomeRentalPM" />
</resources>